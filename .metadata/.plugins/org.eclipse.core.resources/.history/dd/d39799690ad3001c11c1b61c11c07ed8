	 * <!-- begin-user-doc -->
	 * <!-- end-user-doc -->
	 * @generated
	 */
	@Override
	public Collection<? extends EStructuralFeature> getChildrenFeatures(Object object) {
		if (childrenFeatures == null) {
			super.getChildrenFeatures(object);
			childrenFeatures.add(SemanticadaptationPackage.Literals.MODULE__POINTCUTS);
			childrenFeatures.add(SemanticadaptationPackage.Literals.MODULE__ADAPTATIONS);
		}
		return childrenFeatures;
	}

	/**
